<!DOCTYPE html>
<html>
  <head>
    <title>Robust Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-fixed-top navbar-custom">
      <a href="<%= root_path %>" class="navbar-brand">Robust Blog</a>
      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <% unless current_user %>
          <li class="nav-item">
            <%= link_to "Sign in", signin_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign up", signup_path, class: "nav-link" %>
          </li>
        <% end %>
        <% if current_user %>
          <li class="nav-item">
            <%= link_to "My blogs", my_blogs_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_blog_path(current_user), class: "nav-link btn btn-default" do %>
              <i class="fa fa-plus fa-lg" aria-hidden="true"></i> New blog
            <% end %>
          </li>
          <div class="pull-xs-right">
            <div class="btn-group">
              <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
              </button>
              <div class="dropdown-menu">
                <%= link_to "Logout", "/signout", class: "dropdown-item" %>
              </div>
            </div>
          </div>
        <% end %>
      </ul>
    </nav>

    <div class="container pad-top-70">
      <%= flash_messages %>
      <%= yield %>
    </div>

  </body>
</html>
